FROM vllm/vllm-openai:latest
ENV HF_HUB_ENABLE_HF_TRANSFER=1
ARG MODEL_ID=openai/gpt-oss-20b
ENV MODEL_ID=${MODEL_ID} SERVED_MODEL_NAME=${MODEL_ID}
EXPOSE 8000
CMD bash -lc 'vllm serve "$MODEL_ID" --host 0.0.0.0 --port 8000 --served-model-name "$SERVED_MODEL_NAME" --gpu-memory-utilization 0.90 --max-model-len 32768'