FROM python:3.12-slim
ENV PIP_NO_CACHE_DIR=1 PYTHONUNBUFFERED=1 TZ=Asia/Tokyo
RUN apt-get update && apt-get install -y --no-install-recommends git curl && rm -rf /var/lib/apt/lists/*
RUN pip install -U pip && pip install "openai>=1.40.0" virtual-lab jupyter
WORKDIR /workspace
CMD ["jupyter","notebook","--ip=0.0.0.0","--port=8888","--NotebookApp.token=","--no-browser"]